@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-12 mb-3">
        <input id="searchBox" class="form-control" placeholder="Search by title..."/>
    </div>
    <div class="col-md-3 mb-3">
        <select id="categoryFilter" class="form-select">
            <option value="">All Categories</option>
        </select>
    </div>
</div>

<div id="productGrid" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var p in Model)
    {
        <div class="col product-card" data-category="@p.Category" data-title="@p.Title.ToLower()">
            <div class="card h-100">
                <img src="@p.Image" class="card-img-top" style="height:180px; object-fit:contain;">
                <div class="card-body d-flex flex-column">
                    <h6 class="card-title">@p.Title</h6>
                    <p class="fw-bold text-primary">$@p.Price</p>
                    <button class="btn btn-outline-primary mt-auto"
                            onclick="openDetails(@p.Id)">View</button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/products.js"></script>
}