<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Waterlily Labs – modern e-commerce demo built with ASP.NET Core MVC">
    <meta name="keywords" content="ASP.NET, MVC, Bootstrap, products, shopping cart">
    <title>@ViewData["Title"] - Waterlily</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Waterlily</a>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
              <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
              <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Products</a></li>
              <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
            </ul>
            <button class="btn btn-outline-light position-relative" id="cartBtn">
              🛒 <span class="badge bg-danger" id="cartCount">0</span>
            </button>
          </div>
        </div>
      </nav>
    </header>

    <main role="main" class="container-fluid mt-5 pt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-auto">
      <small>&copy; 2025 Waterlily Labs &nbsp;
        <a href="#" class="text-muted"><i class="bi bi-twitter"></i></a>
        <a href="#" class="text-muted"><i class="bi bi-linkedin"></i></a>
      </small>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <div class="modal fade" id="detailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
            <img class="img-fluid mb-3" id="detailImg" />
            <p id="detailDesc"></p>
            <div id="detailRating"></div>
            <p class="fw-bold">$<span id="detailPrice"></span></p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-success" onclick="addToCart()">Add to Cart</button>
        </div>
        </div>
    </div>
    </div>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartCanvas">
        <div class="offcanvas-header">
            <h5>Your Cart</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body" id="cartBody"></div>
        <div class="offcanvas-footer p-3">
            <h5>Total: $<span id="cartTotal">0</span></h5>
            <button class="btn btn-primary w-100">Checkout</button>
        </div>
    </div>



</body>
</html>